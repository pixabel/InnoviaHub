<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <!-- IIS-level CORS headers added for all responses -->
    <httpProtocol>
      <customHeaders>
        <!-- Replace this origin with your exact frontend origin if different -->
        <add name="Access-Control-Allow-Origin" value="https://innoviahub-8him5.ondigitalocean.app" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization, X-Requested-With, Accept" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
        <add name="Access-Control-Allow-Credentials" value="true" />
      </customHeaders>
    </httpProtocol>

    <!-- Short-circuit OPTIONS preflights at the IIS level so the browser receives valid CORS headers -->
    <rewrite>
      <rules>
        <rule name="CORS Preflight (OPTIONS)" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{REQUEST_METHOD}" pattern="OPTIONS" />
            <!-- Optional: restrict to specific paths (uncomment and adjust) -->
            <!-- <add input="{REQUEST_URI}" pattern="^/bookinghub" /> -->
          </conditions>
          <action type="CustomResponse" statusCode="204" statusReason="No Content" statusDescription="CORS Preflight" />
        </rule>
      </rules>
    </rewrite>

    <!-- Ensure WebDAV and other handlers that can interfere are removed -->
    <handlers>
      <remove name="WebDAV" />
    </handlers>

    <!-- Standard AspNetCoreModule configuration. Replace Backend.dll with your app DLL if different -->
    <aspNetCore processPath="dotnet" arguments=".\Backend.dll" stdoutLogEnabled="false" stdoutLogFile=".\logs\stdout" hostingModel="InProcess" />
  </system.webServer>
</configuration>