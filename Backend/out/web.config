<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>

      <!-- Preserve existing handler for ASP.NET Core -->
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>

      <!-- Add CORS headers at the IIS level (temporary workaround) -->
      <httpProtocol>
        <customHeaders>
          <!-- Use the exact origin of your front-end -->
          <add name="Access-Control-Allow-Origin" value="https://innoviahub-8him5.ondigitalocean.app" />
          <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization" />
          <add name="Access-Control-Allow-Methods" value="GET, POST, OPTIONS" />
          <add name="Access-Control-Allow-Credentials" value="true" />
        </customHeaders>
      </httpProtocol>

      <!-- Rewrite rule to return 204 for OPTIONS preflight to SignalR endpoints -->
      <rewrite>
        <rules>
          <rule name="Handle SignalR OPTIONS" stopProcessing="true">
            <!-- Match negotiate and hub paths -->
            <match url="^(bookinghub|resourcehub)(/.*)?$" ignoreCase="true" />
            <conditions>
              <add input="{REQUEST_METHOD}" pattern="OPTIONS" ignoreCase="true" />
            </conditions>
            <action type="CustomResponse" statusCode="204" statusReason="No Content" statusDescription="CORS Preflight" />
          </rule>
        </rules>
      </rewrite>

      <!-- Existing aspNetCore element that launches the app -->
      <aspNetCore processPath="dotnet" arguments=".\Backend.dll" stdoutLogEnabled="false" stdoutLogFile=".\logs\stdout" hostingModel="inprocess" />
    </system.webServer>
  </location>
</configuration>